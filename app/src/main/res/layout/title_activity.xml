<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    tools:context="com.example.smashtheants.TitleActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="@drawable/title_screen">

        <Button
            android:id="@+id/start_game_button"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Start Game"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4E5254"
            android:textColorHint="#FFEB3B"
            android:theme="@color/colorPrimary"
            tools:text="Settings" />
        <Button
            android:id="@+id/high_scores_button"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="High Scores"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4E5254"
            android:textColorHint="#FFEB3B"
            android:theme="@color/colorPrimary"
            tools:text="High Scores" />

    </LinearLayout>


</RelativeLayout>
